gitcheckout () {
  git checkout $1
  git pull
  git checkout -b "$2/$3"
  git push --set-upstream origin "$2/$3"
}

gitPR () {
  gh pr create --base dev --title "#$taskID -" --web
}
gitPRstage () {
  gh pr create --base stage --title "#$taskID -" --web
}
gitPRmaster () {
  gh pr create --base master --title "#$taskID -" --web
}

alias gopr=gitOpenPR

# creates a feature branch on local and remote
alias "gitFeat"='gitcheckout dev feat'
alias gffs='gitcheckout dev feat'

# creates a hotfix branch on local and remote
alias "gitFix"='gitcheckout dev fix'
alias "ghf"='gitcheckout dev fix'
